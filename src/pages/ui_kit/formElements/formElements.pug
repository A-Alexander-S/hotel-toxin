    title Form Elements
  body
    div.wrapper
      div.header
        img.logo(src=require("../../../assets/img/logo.svg"), alt="Логотип")
        //- svg(class="arrow-forward" width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg")
        //-   path(d="M9 0.984375L17.0156 9L9 17.0156L7.59375 15.6094L13.1719 9.98438H0.984375V8.01562H13.1719L7.59375 2.39062L9 0.984375Z" fill="url(#paint0_linear_18445:386)")
