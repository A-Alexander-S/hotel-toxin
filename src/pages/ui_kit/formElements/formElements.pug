        //-       stop(stop-color="#BC9CFF")
        //-       stop(offset="1" stop-color="#8BA4F9")
      main.main
        div.form-elements
          div.form-elements__column.form-elements__column_1
            div.form-elements__column-item
              +text-field("Text Field","Default","text","Email")
            div.form-elements__column-item
              +text-field("Text Field","Hover / Focus","text","This is pretty awesome")
            div.form-elements__column-item
              +amount-guests(imgRowDown_amount_guest,imgCircleDeduct_amount_guest,imgCircleAdd_amount_guest) 
            div.form-elements__column-item
              div.date-text-field
                div.date-arrival
                  +caption("masked text field")
                  input.date-arrival__dropdown.date-arrival__dropdown_w_100(type="text" name="date-arrival" placeholder="ДД.ММ.ГГГГ")
            div.form-elements__column-item
              +length-stay("date Dropdown","date Dropdown",imgRowDown_length_stay)
            div.form-elements__column-item  
              +filter-dates(imgRowDown_filter_date)
            div.form-elements__column-item
              +subscription-field()
          div.form-elements__column.form-elements__column_2
            div.form-elements__column-item
              +permissions-checkbox()
            div.form-elements__column-item
              +gender-select()
            div.form-elements__column-item
              +special-offers("toogle")
            div.form-elements__column-item
              +special-offers()
            div.form-elements__column-item
              +caption("like button")
              +like-button(1)
              +like-button(12)
            div.form-elements__column-item
              +caption("rate button")
              div.inner
                +rating()
                +rating()
          div.form-elements__column.form-elements__column_3
            div.form-elements__column-item
              +range-slider()
            div.form-elements__column-item
              +caption("buttons")
              div.wrap-btn
                div.button
                  button.button__btn click me
                div.button
                  button.button__btn click me
            div.form-elements__column-item
              div.wrap-btn
                div.button-border
                  button.button-border__btn click me
                div.button-border
                  button.button-border__btn click me
            div.form-elements__column-item
              div.wrap-btn
                dib.button-text
                  div.button-text__btn click me
                dib.button-text
                  div.button-text__btn click me
            div.form-elements__column-item
              div.wrap-btn
                +button-next()
      footer.footer