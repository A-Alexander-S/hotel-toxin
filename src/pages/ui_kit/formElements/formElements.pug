include ../../../components/length-stay/length-stay.pug
include ../../../components/amount_guest/amount_guest.pug

- var imgRow_down = 'components/length-stay/row_down';
- var imgRowDown = 'components/amount_guest/row_down';
- var imgCircleDeduct = 'components/amount_guest/circle-deduct';
- var imgCircleAdd = 'components/amount_guest/circle-add';

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Form Elements
  body
    div.wrapper
      div.header
        img.logo(src=require("../../../assets/img/logo.svg"), alt="Логотип")
      main.main
        div.form-elements
          div.form-elements__column
            div.email-box.form-elements__column-item
              div.caption
                p Text Field
                p Default
              input.input-email(type="email" placeholder="Email")
            div.email-box.form-elements__column-item
              div.caption
                p Text Field
                p Hover / Focus
              input.input-email(type="email" placeholder="Email")
            div.form-elements__column-item
              +amount-guests(imgRowDown,imgCircleDeduct,imgCircleAdd)       
            div.masked-date.form-elements__column-item
              div.caption
                p Masked text field
                p
              div.masked-date__field ДД.ММ.ГГГГ
            div.form-elements__column-item
              +length-stay("date Dropdown","date Dropdown",imgRow_down)
          div.form-elements__column
          div.form-elements__column
      footer.footer